    // Chatbot Button Icons
    .chatbot-buttons(style='position: fixed; bottom: 20px; right: 20px; display: flex; flex-direction: column; gap: 10px;')
      img(src='https://upload.wikimedia.org/wikipedia/commons/thumb/5/50/Reliance_Jio_Logo_%28October_2015%29.svg/1024px-Reliance_Jio_Logo_%28October_2015%29.svg.png', alt='Open Jio Chatbot', style='width: 50px; height: 50px; border-radius: 50%; cursor: pointer;', onclick='openChatbot("jio")')
      img(src='https://i.pinimg.com/736x/f3/bc/e5/f3bce5c84e137f38c57b7ddf792f2b58.jpg', alt='Open Airtel Chatbot', style='width: 50px; height: 50px; border-radius: 50%; cursor: pointer;', onclick='openChatbot("airtel")')
      img(src='https://logowik.com/content/uploads/images/vi-vodafone-idea6610.jpg', alt='Open Idea Chatbot', style='width: 50px; height: 50px; border-radius: 50%; cursor: pointer;', onclick='openChatbot("idea")')

    // Chatbot Iframes
    .chatbot-container(style='position: fixed; bottom: 20px; right: 100px; width: 500px; height: 700px; z-index: 9999; display: none;', id='jioChatbot')
      iframe(src="https://www.chatbase.co/chatbot-iframe/2k5AOJLx0BTHp62f64SEK", width="100%", style="height: 100%; border: none; min-height: 700px", frameborder="0")

    .chatbot-container(style='position: fixed; bottom: 20px; right: 100px; width: 500px; height: 700px; z-index: 9999; display: none;', id='airtelChatbot')
      iframe(src="https://www.chatbase.co/chatbot-iframe/VACPwVtsQiNFFJTbDuVkz", width="100%", style="height: 100%; border: none; min-height: 700px", frameborder="0")

    .chatbot-container(style='position: fixed; bottom: 20px; right: 100px; width: 500px; height: 700px; z-index: 9999; display: none;', id='ideaChatbot')
      iframe(src="https://www.chatbase.co/chatbot-iframe/bS3RvQa0IgdQYEAGEjaPB", width="100%", style="height: 100%; border: none; min-height: 700px", frameborder="0")

    // Scripts
    script(src='/javascripts/jquery-1.11.1.min.js')
    script(src='/javascripts/bootstrap.min.js')
    script.
      // JavaScript to handle chatbot button functionality
      function openChatbot(chatbot) {
        document.getElementById('jioChatbot').style.display = 'none';
        document.getElementById('airtelChatbot').style.display = 'none';
        document.getElementById('ideaChatbot').style.display = 'none';

        if (chatbot === "jio") {
          document.getElementById('jioChatbot').style.display = 'block';
        } else if (chatbot === "airtel") {
          document.getElementById('airtelChatbot').style.display = 'block';
        } else if (chatbot === "idea") {
          document.getElementById('ideaChatbot').style.display = 'block';
        }
      }

      // Your Chatbase scripts
      script.
        window.embeddedChatbotConfig = { chatbotId: "2k5AOJLx0BTHp62f64SEK", domain: "www.chatbase.co" }
      script(src='https://www.chatbase.co/embed.min.js', chatbotId="2k5AOJLx0BTHp62f64SEK", domain="www.chatbase.co", defer)

      script.
        window.embeddedChatbotConfig = { chatbotId: "VACPwVtsQiNFFJTbDuVkz", domain: "www.chatbase.co" }
      script(src='https://www.chatbase.co/embed.min.js', chatbotId="VACPwVtsQiNFFJTbDuVkz", domain="www.chatbase.co", defer)

      script.
        window.embeddedChatbotConfig = { chatbotId: "bS3RvQa0IgdQYEAGEjaPB", domain: "www.chatbase.co" }
